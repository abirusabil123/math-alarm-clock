<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MathAlarmClock" parent="android:Theme.Material.Light">
        <!-- Splash screen background color - dark blue for dark mode -->
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
    </style>

    <!-- Add this splash theme -->
    <style name="Theme.MathAlarmClock.Splash" parent="Theme.MathAlarmClock">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>